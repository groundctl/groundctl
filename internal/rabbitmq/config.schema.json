{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "queues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the queue"
          },
          "filename": {
            "type": "string"
          },
          "durable": {
            "type": "boolean"
          },
          "auto_delete": {
            "type": "boolean"
          },
          "exclusive": {
            "type": "boolean"
          },
          "no_wait": {
            "type": "boolean"
          },
          "vhost": {
            "type": "string"
          }
        },
        "required": ["name"]
      }
    },
    "required": true
  }
}
